<mah:MetroWindow
    x:Class="Partec.Frontend.Dialogos.DgRoles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="Rol"
    Width="700"
    Height="500"
    Background="#F5EEDC"
    Foreground="#183B4E"
    ResizeMode="NoResize"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Text="Nombre:" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Background="#F5EEDC"
            BorderBrush="#27548A"
            Foreground="#183B4E"
            Text="{Binding SelectedRol.NombreRol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            FontSize="18"
            FontWeight="Bold"
            Foreground="#183B4E"
            Text="Permisos disponibles" />
        <ItemsControl
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding ListaPermisos, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Descripcion}" IsChecked="{Binding Asignado, Mode=TwoWay}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>





        <StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnGuardar"
                Width="90"
                Margin="0,0,10,0"
                Background="#27548A"
                Click="BtnGuardar_Click"
                Content="Guardar"
                Foreground="#F5EEDC" />
            <Button
                x:Name="btnCancelar"
                Width="90"
                Background="#DDA853"
                Click="BtnCancelar_Click"
                Content="Cancelar"
                Foreground="#183B4E" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
