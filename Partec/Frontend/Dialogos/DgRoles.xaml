<mah:MetroWindow
    x:Class="Partec.Frontend.Dialogos.DgRoles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="Gestión de Roles"
    Width="800"
    Height="450">
    <Grid>
        <TextBlock
            Margin="10"
            FontSize="20"
            FontWeight="Bold"
            Text="Nuevo Rol" />
        <StackPanel Margin="10">
            <TextBlock Text="Código:" />
            <TextBox Text="{Binding RolSeleccionado.IdRol}" />
            <TextBlock Text="Descripción:" />
            <TextBox Text="{Binding RolSeleccionado.NombreRol}" />
            <Button Command="{Binding GuardarCommand}" Content="Guardar" />
            <Button Command="{Binding CancelarCommand}" Content="Cancelar" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
