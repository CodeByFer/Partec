<UserControl
    x:Class="Partec.Frontend.ControlUsuario.UCIncidencia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Partec.Frontend.ControlUsuario"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="#F5EEDC"
    mc:Ignorable="d">

    <Grid>
        <DataGrid
            x:Name="dgIncidencias"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnWidth="*"
            IsReadOnly="False"
            ItemsSource="{Binding ListaIncidencias}"
            SelectedItem="{Binding SelectedIncidencia, Mode=TwoWay}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding IdIncidencia}"
                    Header="ID"
                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding TipoIncidencia}" Header="Tipo Incidencia" />
                <DataGridTextColumn Binding="{Binding FechaIncidencia, StringFormat=dd/MM/yyyy}" Header="Fecha Incidencia" />
                <DataGridTextColumn Binding="{Binding Ubicacion}" Header="Ubicación" />
                <DataGridTextColumn Binding="{Binding NumeroSerie}" Header="Nº Serie" />
                <DataGridTextColumn Binding="{Binding TiempoInvertido}" Header="Tiempo Invertido" />
                <DataGridTextColumn Binding="{Binding FechaResolucion, StringFormat=dd/MM/yyyy}" Header="Fecha Resolución" />
                <DataGridTextColumn Binding="{Binding IdResponsable}" Header="Responsable ID" />

                <DataGridTemplateColumn Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Command="{Binding DataContext.GuardarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="{mat:PackIcon Kind=ContentSave}"
                                    Foreground="Green"
                                    Style="{StaticResource MaterialDesignToolButton}" />
                                <Button
                                    Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="{mat:PackIcon Kind=Delete}"
                                    Foreground="Red"
                                    Style="{StaticResource MaterialDesignToolButton}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel Margin="10" Orientation="Vertical">
                        <TextBlock FontWeight="Bold" Text="Responsable:" />
                        <ComboBox
                            DisplayMemberPath="Nombre"
                            ItemsSource="{Binding DataContext.ListaResponsables, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            SelectedItem="{Binding IdResponsable, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                            SelectedValuePath="IdUsuario" />


                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="Bold"
                            Text="Observaciones:" />
                        <TextBox
                            Height="60"
                            AcceptsReturn="True"
                            Text="{Binding Observaciones, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>

    </Grid>
</UserControl>
