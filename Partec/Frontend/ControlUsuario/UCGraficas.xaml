<UserControl
    x:Class="Partec.Frontend.ControlUsuario.UCGraficas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1000"
    Background="#F5EEDC"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />


        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock
            Margin="0,0,0,20"
            FontSize="22"
            FontWeight="Bold"
            Foreground="#183B4E"
            Text="Gráficas de Incidencias" />
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <lvc:CartesianChart
                x:Name="grIncMes"
                Grid.Column="0"
                Width="auto"
                Height="auto"
                Series="{Binding SeriesPorMes}"
                XAxes="{Binding LabelsMeses}" />
            <lvc:CartesianChart
                x:Name="grIncDep"
                Grid.Column="1"
                Width="auto"
                Height="auto"
                LegendPosition="Right"
                Series="{Binding SeriesPorDepartamento}"
                XAxes="{Binding LabelDepartamento}"
                YAxes="{Binding YAxisDepartamento}" />
        </Grid>
        <lvc:PieChart
            x:Name="grIncEst"
            Grid.Row="2"
            Grid.Column="0"
            Width="auto"
            Height="auto"
            Grid.IsSharedSizeScope="True"
            LegendPosition="Right"
            Series="{Binding SeriesPorEstado}" />

        <lvc:PieChart
            x:Name="grIncTipo"
            Grid.Row="2"
            Grid.Column="1"
            Width="auto"
            Height="auto"
            LegendPosition="Right"
            Series="{Binding SeriesPorTipo}" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            Width="auto"
            Height="auto"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Button
                x:Name="btnRefresh"
                Width="auto"
                Margin="20"
                Click="BtnRefresh_Click"
                Content="Refrescar Graficos" />
            <Button
                x:Name="btnImprimir"
                Width="auto"
                Margin="20"
                Click="BtnImprimir_Click"
                Content="Imprimir Graficos" />
        </StackPanel>
        <!--  LabelsRotation="45"  -->

    </Grid>
</UserControl>
