<mah:MetroWindow
    x:Class="Partec.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Partec"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Partec"
    Width="1080"
    Height="720"
    Background="#F5EEDC"
    Foreground="#183B4E"
    ShowCloseButton="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    ShowTitleBar="False"
    mc:Ignorable="d">

    <DockPanel>
        <!--  Principal Top Bar  -->
        <Grid
            Height="35"
            Margin="10"
            DockPanel.Dock="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <ContentControl
                Grid.Column="0"
                HorizontalAlignment="Left"
                Content="{StaticResource PartecSVGIcon}" />
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Menú principal" />
            <WrapPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="logoutButton"
                    Margin="0,0,10,0"
                    Background="#DDA853"
                    BorderThickness="0"
                    Click="logoutButton_Click"
                    Foreground="#F5EEDC"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Content>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <mat:PackIcon
                                Width="15"
                                Height="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Logout" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="{Binding usuario.Nombre}" />
                        </StackPanel>

                    </Button.Content>
                </Button>

                <Button
                    x:Name="minButton"
                    Background="LightBlue"
                    BorderThickness="0"
                    Click="minButton_Click"
                    Foreground="Beige"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Content>
                        <mat:PackIcon Kind="Minimize" />
                    </Button.Content>
                </Button>
                <Button
                    x:Name="maxButton"
                    Background="#27548A"
                    BorderThickness="0"
                    Click="maxButton_Click"
                    Foreground="Beige"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Content>
                        <mat:PackIcon Kind="Maximize" />
                    </Button.Content>
                </Button>
                <Button
                    x:Name="exitButton"
                    Background="IndianRed"
                    BorderThickness="0"
                    Click="exitButton_Click"
                    Foreground="Beige"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Content>
                        <mat:PackIcon Kind="Close" />
                    </Button.Content>
                </Button>
            </WrapPanel>

        </Grid>
        <Grid DockPanel.Dock="Left" />
        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TabControl
                x:Name="tbcMain"
                mat:ColorZoneAssist.Background="#FFDDA853"
                mat:ColorZoneAssist.Foreground="#183B4E"
                BorderThickness="0"
                Style="{StaticResource MaterialDesignFilledTabControl}"
                TabStripPlacement="Left" />






        </Grid>
    </DockPanel>

</mah:MetroWindow>
